<?xml version='1.0' encoding='us-ascii'?> 
<parameters>
  
  
  <!-- ******************** Numerical Parameters ******************** -->
  <numericalParameters>
    
    <continue> true </continue>
    
    <terminationCondition> 1e-7  </terminationCondition>
    <orderOfOccuracy>      2     </orderOfOccuracy>
    <numThreads>           2     </numThreads>
    
    <implicit>       true  </implicit>
    <cfl>            50    </cfl>
    <maxNumSteps>    9000  </maxNumSteps>
    <minNumSteps>    100   </minNumSteps>
    <printFrequancy> 1     </printFrequancy>
    
    <!--
    <implicit>     false  </implicit>
    <cfl>          1    </cfl>
    <maxNumSteps>  1000  </maxNumSteps>
    <minNumSteps>  100   </minNumSteps>
    -->	
    
    <tol>      1e-5  </tol>
    <diffTol>  1e-8  </diffTol>
    <penalty>  1     </penalty>
    
    <damping>
      <max>   2e-3  </max>
      <begin> 5e-4  </begin>
      <end>   1e-3  </end>
    </damping>
	
  </numericalParameters>
  
  
  <!-- ******************** Physical Parameters ******************** -->  
  <physicalParameters>
    <kapa>      1.400  </kapa>
    <reynolds>  -1   </reynolds>
    <prandtl>   0.72   </prandtl>

    <!-- inlet boundary conditions -->
    <pIn>      1   </pIn>
    <rhoIn>    1   </rhoIn>
    <angleIn>  0   </angleIn>
    
    <!-- outlet boundary conditions -->
    <!--pOut>   0.737  </pOut-->
    <mach>   0.8  </mach>
  </physicalParameters>

  <meshPath> meshes/NACA0012_1_25deg </meshPath>
  <outputFilePrefix>  W	 </outputFilePrefix>

</parameters>

